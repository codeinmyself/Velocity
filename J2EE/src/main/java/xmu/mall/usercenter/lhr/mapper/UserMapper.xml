<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="xmu.mall.usercenter.lhr.mapper.IUserMapper"> 
	<resultMap id="UserBaseMap" type="xmu.mall.usercenter.lhr.model.User">
        <id column="user_id" property="user_id" jdbcType="BIGINT"/>
        <result column="user_name" property="user_name" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="nickname" property="nickname" jdbcType="VARCHAR"/>
        <result column="mobile_phone" property="mobile_phone" jdbcType="VARCHAR"/>
        <result column="imagepath" property="imagepath" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="getUserByUserId" parameterType="java.lang.Long" resultMap="UserBaseMap">
        SELECT * FROM 142408_users WHERE 142408_users.user_id=#{user_id}
    </select>
    <update id="updateUserByUser" parameterType="xmu.mall.usercenter.lhr.model.User">
        UPDATE 142408_users SET
        user_name=#{user_name},
        password=#{password},
        nickname=#{nickname},
        mobile_phone=#{mobile_phone},
        imagepath=#{imagepath}
        where user_id=#{user_id}
    </update>
</mapper>