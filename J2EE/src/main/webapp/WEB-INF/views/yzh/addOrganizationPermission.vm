#tiles_insertTemplate({"template":"../layout/yzh/template.vm"})#tiles_putAttribute({"name":"title", "value": "增加商店权限"})#end #tiles_putAttribute({"name":"body"})

<form id="form" class="col s12" action="addOrganizationPermission" method="post">
  <div class="demo-card-square mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand">
      <h2 class="mdl-card__title-text">增加商店权限</h2>
    </div>
    <div class="mdl-card__supporting-text">
      <div class="row">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" type="text" id="organization_name" name="organization_name">
          <label class="mdl-textfield__label" for="serial_code">商店名称</label>
        </div>
      </div>
      <div class="row">
        <div class="row">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="text" maxlength="40" required="required" id="permission.permission" name="permission.permission" >
            <label class="mdl-textfield__label">权限</label>
          </div>
        </div>
        <div class="row">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="text" id="permission.table_name" name="permission.table_name" >
            <label class="mdl-textfield__label" >资源名称</label>
          </div>
        </div>
        <div class="row">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <textarea class="mdl-textfield__input" type="text" rows= "5" maxlength="255" id="description" name="description"></textarea>
            <label class="mdl-textfield__label" for="description">权限描述</label>
          </div>
        </div>
      </div>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
        确定
      </button>
      
    </div>
  </div>
</form>
#end #end
