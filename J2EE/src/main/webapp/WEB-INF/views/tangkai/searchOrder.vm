#tiles_insertTemplate({"template":"../layout/tangkai/template.vm"})
#tiles_putAttribute({"name":"title", "value": "搜索订单"})#end
#tiles_putAttribute({"name":"header"})
#parse("../layout/tangkai/header.vm")
<script type="text/javascript" src="#springUrl('/resources/js/tangkai/showdate.js')"></script>
#end 
#tiles_putAttribute({"name":"body"})
<div>
	<form action="searchResult">
		<table class="manage">
			<tr>
				<td class="manage_title">订单信息</td>
			</tr>
			<tr>
				<td class="manage_left">订单号（数字）</td>
				<td class="manage_right"><input type="text"
					class="manage_input" name="order_sn"></input></td>
			</tr>
			<tr>
				<td class="manage_left">下单时间前范围</td>
				<td class="manage_right"><input type="text" id="time" value="choose time" onClick="return Calendar('time');" class="manage_input" name="before_add_time"></td></td>
			</tr>
			<tr>
				<td class="manage_left">下单时间后范围</td>
				
				<td class="manage_right"><input type="text" id="time1" value="choose time" onClick="return Calendar('time1');" class="manage_input" name="after_add_time"/></td>
			</tr>
			<tr>
				<td class="manage_left">订单状态</td>
				<td class="manage_right"><select name="order_status">
						<option value="-1">空</option>
						<option value="0">未付款</option>
						<option value="1">已付款</option>
						<option value="2">定制中</option>
						<option value="3">已发货</option>
						<option value="4">已收货</option>
						<option value="5">取消</option>
				</select></td>
			</tr>
			<tr>
				<td class="manage_left">是否加急</td>
				<td class="manage_right"><select name="isUrgency">
						<option value="">空</option>
						<option value="Y">是</option>
						<option value="N">否</option>
				</select></td>
			</tr>
			<tr>
				<td class="manage_left">商品名称</td>
				<td class="manage_right"><input type="text"
					class="manage_input" name="goods_name"></input></td>
			</tr>
			<tr>
				<td class="manage_left">收货人姓名</td>
				<td class="manage_right"><input type="text"
					class="manage_input" name="consignee"></input></td>
			</tr>
		</table>
		<input type="submit" class="button"></input>
	</form>
</div>
#end #tiles_putAttribute({"name":"footer"})
#parse("../layout/tangkai/footer.vm") #end #end
