<html>
<head>
<style type="text/css">
.imgtest
{
text-align:center;
background-color:#CC0033;
margin:10px 5px;
overflow:hidden;
}
td
{
font-size:12px;
}
p
{
font-size:12px;
}
.imgtest figure div
{
display:inline-block;
margin:15px auto;
width:100px;
height:100px;
border-radius:100px;
border:2px solid #fff;
overflow:hidden;
-webkit-box-shadow:0 0 3px #ccc;
box-shadow:0 0 3px #ccc;
}
.imgtest img
{
width:100%;
min-height:100%;
text-align:center;
}
img
{
height:39px;
width:39px;
}
</style>
</head>

<body>
<div class="imgtest">
<figure>   
<div>
<img src="http://img1.skqkw.cn:888/2014/12/08/07/rf5rlvjegvz-10335.jpg" />
</div>  
</figure>
</div>
<p>订单页</p>
<hr/>
<a href="home">返回用户信息页</a>
<table cellspacing="18px">
<tr>
<td>订单编号</td>
<td>订单状态</td>
<td>订单总价</td>
<td>取消订单</td>
</tr>
#foreach($Order_info in $mylist)
<tr>
<td>$Order_info.order_sn</td>
<td>
#if($Order_info.order_status==0)
待付款
#end
#if($Order_info.order_status==1)
已付款
#end
#if($Order_info.order_status==2)
定制中
#end
#if($Order_info.order_status==3)
已发货
#end
#if($Order_info.order_status==4)
已收货
#end
#if($Order_info.order_status==5)
取消
#end
</td>
<td>$Order_info.order_price</td>
<td><a href="deletelist?a=$Order_info.order_id">取消订单</a></td>
</tr>
#end
</table>
</body>
</html>